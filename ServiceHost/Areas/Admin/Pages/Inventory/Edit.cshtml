@model StoreManager.Application.Contract.Inventory.EditInventory

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ویرایش انبار محصول (@Model.Product)</h4>
</div>

<form asp-page="./Index" asp-page-handler="Edit"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Price" class="control-label">قیمت</label>
                    <input type="text" class="form-control" asp-for="Price" onchange="makeSlug('Name', 'Slug')">
                    <ul class="parsley-errors-list filled" id="parsley-id-32">
                        <li class="parsley-required">
                            <span asp-validation-for="Price"></span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
      
        <input type="hidden" class="form-control" asp-for="id" value="@Model.id">

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ویرایش</button>
    </div>
</form>

